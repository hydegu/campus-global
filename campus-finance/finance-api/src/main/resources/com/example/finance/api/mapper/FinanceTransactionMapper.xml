<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.finance.biz.mapper.FinanceTransactionMapper">

    <resultMap id="BaseResultMap" type="com.example.finance.api.entity.FinanceTransaction">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="transactionNo" column="transaction_no" jdbcType="VARCHAR"/>
            <result property="userId" column="user_id" jdbcType="BIGINT"/>
            <result property="transactionType" column="transaction_type" jdbcType="TINYINT"/>
            <result property="amount" column="amount" jdbcType="DECIMAL"/>
            <result property="relatedType" column="related_type" jdbcType="TINYINT"/>
            <result property="relatedId" column="related_id" jdbcType="BIGINT"/>
            <result property="remark" column="remark" jdbcType="VARCHAR"/>
            <result property="createAt" column="create_at" jdbcType="TIMESTAMP"/>
            <result property="updateAt" column="update_at" jdbcType="TIMESTAMP"/>
            <result property="deleteAt" column="delete_at" jdbcType="TIMESTAMP"/>
            <result property="userName" column="user_name" jdbcType="VARCHAR"/>
            <result property="userPhone" column="user_phone" jdbcType="VARCHAR"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,transaction_no,user_id,transaction_type,amount,related_type,
        related_id,remark,create_at,update_at,delete_at,
        user_name,user_phone
    </sql>

    <!-- 根据交易类型和时间范围统计金额总和 -->
    <select id="sumAmountByTypeAndTime" resultType="java.math.BigDecimal">
        SELECT COALESCE(SUM(amount), 0)
        FROM finance_transaction
        WHERE transaction_type = #{transactionType}
          AND create_at >= #{startTime}
          AND create_at <= #{endTime}
          AND delete_at IS NULL
    </select>

    <!-- 根据关联业务类型和时间范围统计记录数 -->
    <select id="countByRelatedTypeAndTime" resultType="java.lang.Integer">
        SELECT COUNT(*)
        FROM finance_transaction
        WHERE related_type = #{relatedType}
          AND create_at >= #{startTime}
          AND create_at <= #{endTime}
          AND delete_at IS NULL
    </select>

    <!-- 查询最近N个月的月度流水数据 -->
    <select id="queryMonthlyTurnover" resultType="com.example.finance.api.pojo.MonthlyTurnoverItem">
        SELECT
            DATE_FORMAT(create_at, '%Y-%m') AS month,
            COALESCE(SUM(amount), 0) AS turnover
        FROM finance_transaction
        WHERE create_at >= DATE_SUB(NOW(), INTERVAL #{months} MONTH)
          AND delete_at IS NULL
        GROUP BY DATE_FORMAT(create_at, '%Y-%m')
        ORDER BY month DESC
    </select>
</mapper>